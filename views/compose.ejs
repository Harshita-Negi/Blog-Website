<h1>Compose</h1>

 <form method="post" action="/compose"> <!-- CHALLENGE 9 -->
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" class="form-control" id="title" name="postTitle" autocomplete="off">
    </div>
   
    <div class="form-group">
      <label for="post">Post</label>
      <textarea name="postBody"  class="form-control" id="post" rows="5"></textarea>
    </div>

    <button type="submit" name="value" class="btn btn-info">Publish</button>
  </form>


